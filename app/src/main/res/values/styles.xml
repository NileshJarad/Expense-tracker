<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>


    <style name="MuliTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>
    <style name="MuliButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>


    <style name="openSourceTitleStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="AppTitleStyleBlack">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTitleStyleWhite">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="AppSubTitleStyleBlack">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="AppSubTitleStyleWhite">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="AppBodyStyleBlack">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="AppBodyStyleWhite">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

</resources>
